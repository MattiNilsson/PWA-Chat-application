{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "name": "Message",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "message": {
      "type": "richtext"
    },
    "author": {
      "type": "string"
    },
    "time": {
      "type": "datetime"
    },
    "room": {
      "model": "room",
      "via": "messages"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "messages"
    },
    "userID": {
      "type": "integer"
    }
  }
}
